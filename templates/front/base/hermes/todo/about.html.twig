<!-- About -->
<section id="{{ section.name ~ section.template.name }}" class="page-section" style="background: url({{ vich_uploader_asset(menu, 'imageFile') }}) no-repeat center center ;background-size: cover;" >
    <div class="container" style="max-width: {{ container_width }}">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ section.name }}</h2>
                <h3 class="section-subheading text-muted">{{ section.summary }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    {% for k, post in section.posts %}
                        {% set timeline= 'timeline-inverted' %}
                        {% if k is odd %}
                            {% set timeline= 'timeline-image' %}
                        {% endif %}
                        <li class={{ timeline }}>
                            <div class='timeline-image'>
                                <img class="rounded-circle img-fluid" src="{{ asset(vich_uploader_asset(post, 'imageFile')) }}"
                                     alt="{{ post.name }}">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="subheading">{{ post.name }}</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">{{ post.content|raw }}</p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>


