<!-- Contact Section -->
<section id="section_contact"    class="section_content px-0 col-lg-12 col-12 text-center" style="max-width: {{ contact_width }} ; background-color:{{ contact_bgcolor }} ; color:{{ contact_color }}; font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif;" >
    <div class="container mt-5"  >
        <div class="row mt-0 mb-5">
            <div class="col-lg-12 col-12 text-center">
                {% if contact_presentation is not null  %}
                    <h3 class="section-subheading ">{{ contact_presentation }}</h3>
                {% endif %}
                {% if contact_user is not null  %}
                    <h5 class="section-subheading ">{{ contact_user }}</h5>
                {% endif %}
                {% if contact is not null %}
                    <h5 class="section-subheading"  >{{ 'formulaire.email'|trans() }} : <a href="mailto:{{ contact }}">{{ contact }}</a></h5>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-12">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.name) }}
                            {#                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.email) }}
                            {#                                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.telephone) }}
                            <h5 style="color: red">{{ form_errors(form.telephone) }}</h5>
                            {#                                <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.message) }}
                            {#                                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-12 text-center">
                        <div id="success"></div>
                        <button id="sendMessageButton" class="btn h-w-10 btn-outline-danger h-rounded-lg-4 btn-xl mt-5" type="submit">
                            {{ 'formulaire.send'|trans() }}
                        </button>
                    </div>
                </div>
                {#                </form>#}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>




