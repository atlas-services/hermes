<!-- Section card -->
<section id="{{ section.name }}" class="section_content">
    {% if('previsualidation_sheet' == app.request.get('_route')) %}
        {% set posts = section.getPrevisualisationPosts %}
    {% else %}
        {% set posts = section.posts %}
    {% endif %}

    <div class="col-lg-{{ content_container_width|col_lg() }} col-xs-12 mx-auto ml-0 mr-0 pl-0 pr-0">
        {% for key, post in posts|sort((a, b) => a.position <=> b.position) %}
            {% if key is even %}
                <div class="row col-lg-12 col-xs-12 mx-auto ml-0 mr-0">
                {% set margin = 'ml-lg-auto mr-lg-4 mt-lg-3' %}
                {% set float_direction = 'float-left mr-lg-4 mr-3 mb-3' %}
            {% else %}
                {% set margin = 'mr-lg-auto ml-lg-4 mt-lg-3'  %}
                {% set float_direction = 'float-right ml-lg-4 ml-3 mb-3' %}
            {% endif %}

                <div class="col-lg-5 col-xs-12 h-rounded-lg-04 pt-3 pl-lg-3 pr-lg-3 pb-2 {{ margin }} my-3 w-auto shadow-lg text-center" style="background-color: {{ card_bgcolor }};color: {{ card_color }};">
                    <div class="text-left pb-3 col-xs-12"  style="font-size: 0.875em;">
                        <p class="text-justify col-xs-12">
                        {% if vich_uploader_asset(post, 'imageFile') is not null %}
                            <img class="h-rounded-lg-4 {{ float_direction }}" alt="" class="img-fluid img-thumbnail" src="{{ asset(vich_uploader_asset(post, 'imageFile'))| imagine_filter('app_fixed_carre_300') }}" />
                        {% endif %}
                        {{ post.content|raw }}
                        </p>
                    </div>
                </div>
                {% if key is  odd %}
                    </div>
                {% endif %}
        {% endfor %}
    </div>
</section>