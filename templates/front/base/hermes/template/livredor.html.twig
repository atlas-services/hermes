<!-- Contact Section -->
<section class="mh-100 pb-0  px-0 container-fluid col-lg-{{ container_width|col_lg() }} col-12 text-center"  style="background-color:{{ livredor_bgcolor }} ; color:{{ livredor_color }}; " >
    <div class="container col-lg-{{ content_container_width|col_lg() }}"  >
        {% if 'one page' == nav_bar  %}
            <div class="col-lg-12 col-12 text-center mb-5">
                <p> <a style="color:{{ content_link_color }}" onmouseover="this.style.color='{{ content_link_hover_color }}'" onmouseout="this.style.color='{{ content_link_color }}'" class="js-scroll-trigger main-btn wow fadeInUp rounded-pill" data-wow-delay="0.8s" data-wow-duration="1.0s" href="{{ path('sheet') }}">Retour sur le site</a></p>
            </div>
        {% endif %}
        <div class="row mt-0 mb-5">
            <div class="col-lg-12 col-12 text-center">
                {% if livredor_presentation is not null  %}
                    <h3 class="section-subheading ">{{ livredor_presentation }}</h3>
                {% endif %}
            </div>
        </div>
        <div class="row col-12 mx-auto px-0">
            <div class="col-lg-12 col-12 mx-auto px-0">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.name) }}
                            {#                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.email) }}
                            {#                                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.content) }}
                            {#                                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-12 text-center mb-5">
                        <div id="success"></div>
                        <button name="" id="sendMessageButton" class="btn h-w-10 {{ livredor_bgcolor_btn ?? 'btn-outline-danger'}} h-rounded-lg-4 btn-xl mt-5" type="submit">
                            {{ 'formulaire.send'|trans() }}
                        </button>
                    </div>
                </div>
                {{ form_widget(form.csrf_token) }}
                {{ form_end(form, {render_rest: false}) }}
            </div>
        </div>
        {% for temoignage in livredor %}
            <div class="card my-2 ">
                <p class="mt-2 lead" >Nom : {{ temoignage.name }} </p>
                <p class="lead"> Message : {{ temoignage.content|raw }}</p>
            </div>
        {% endfor %}
    </div>
</section>




