<!-- Section carousel -->
<section id="{{ section.name }}" class="section_content">
    {% if('previsualidation_sheet' == app.request.get('_route')) %}
        {% set posts = section.getPrevisualisationPosts %}
    {% else %}
        {% set posts = section.posts %}
    {% endif %}

    <div class="container col-xs-12 col-lg-{{ carousel_container_width|col_lg() }}" style="background-color:{{ content_bgcolor }}">
        <!--Carousel Wrapper-->
        <div id="carousel-fade" class="carousel slide carousel-slide" data-ride="carousel">
            <!--Indicators-->
            <ol class="carousel-indicators">
                {% for key, post in posts|sort((a, b) => a.position <=> b.position) %}
                    {% set active = '' %}
                    {% if 0 == key %}
                        {% set active = 'active' %}
                    {% endif %}
                    <li data-target="#carousel-fade" data-slide-to="{{ key }}" class="{{ active }}"></li>
                {% endfor %}
            </ol>
            <!--/.Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                {% for key, post in posts|sort((a, b) => a.position <=> b.position) %}
                    {% set active = '' %}
                    {% if 0 == key %}
                        {% set active = 'active' %}
                    {% endif %}
                    <div class="carousel-item  col-xs-12 {{ active }}">
                        <img class="d-block w-100" src="{{ asset(vich_uploader_asset(post, 'imageFile'))| imagine_filter('app_fixed_carousel_filter') }}"
                             alt="{{ post.name }}">
                        <div class="carousel-caption">
                            <h5>
                                <a class="portfolio-link"  data-toggle="modal" href="#portfolioModal{{ post.id }}">
                                    {{ post.name }}
                                </a>
                            </h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!--/.Slides-->
            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-fade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-fade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <!--/.Controls-->
        </div>
        <!--/.Carousel Wrapper-->
    </div>>
</section>


