<!-- Contact Section -->
<section id="section_contact" class="pb-0  px-0 container col-lg-{{ container_width|col_lg() }} col-12 text-center" >
    <div class="container col-lg-{{ content_container_width|col_lg() }} " >
        <div class="row">
            <div class="col-lg-12 col-12 text-center">
                {% if user.firstname is defined and  user.lastname is defined %}
                    <h3 class="section-subheading text-muted">{{ 'formulaire.contact'|trans() }} : {{ user.firstname ~ ' ' ~  user.lastname }}</h3>
                {% endif %}
                {% if user.email is defined %}
                    <h3 class="section-subheading text-muted">{{ 'formulaire.email'|trans() }} :  <a style="color:{{ content_link_color }}" onmouseover="this.style.color='{{ content_link_hover_color }}'" onmouseout="this.style.color='{{ content_link_color }}'" href="mailto:{{ user.email }}">{{ user.email }}</a></h3>
                {% endif %}
            </div>
        </div>
        <div class="mt-5 mb-5 row">
            <div class="col-lg-12 col-12 pl-0 text-center">
                {% if 'one page' == nav_bar  %}
                    <p> <a style="color:{{ content_link_color }}" onmouseover="this.style.color='{{ content_link_hover_color }}'" onmouseout="this.style.color='{{ content_link_color }}'" class="js-scroll-trigger main-btn wow fadeInUp rounded-pill" data-wow-delay="0.8s" data-wow-duration="1.0s" href="{{ path('sheet') }}">Retour sur le site</a></p>
                {% else %}
                <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">Témoignages</h3>
                {% endif %}
            </div>
        </div>
        {% if 'none' != nav_bar  %}
            {% for temoignage in livredor %}
            <div class="mt-5 row">
                <div class="col-lg-12 col-12 pl-0 text-left">
                    <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">{{ temoignage.firstname }}, {{ temoignage.lastname }}</h3>
                </div>
                <div class="col-lg-12 col-12 pl-0 text-left">
                    <blockquote style="color:#7c7c7c;font-family:'Roboto Condensed',serif;font-size:16px;text-align: justify;">
                       {{ temoignage.content|nl2br }}
                    </blockquote>
                </div>
            </div>
            {% endfor %}
            <hr>
        {% endif %}

        <div class="mt-5 mb-5 row">
            <div class="col-lg-12 col-12 pl-0 text-center">
                <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">Écrire dans le livre d'or</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-12">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.firstname) }}
                            {#                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.lastname) }}
                            {#                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.email) }}
                            {#                                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.content) }}
                            {#                                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-12 text-center">
                        <div id="success"></div>
                        *<button id="sendMessageButton" class="btn h-w-10 btn-outline-danger h-rounded-lg-4 btn-xl mt-5" type="submit">
                            {{ 'formulaire.send'|trans() }}
                        </button>
                    </div>
                </div>
                {{ form_widget(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
</section>




