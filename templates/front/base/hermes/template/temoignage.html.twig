<!-- Contact Section -->
<section id="section_contact" class="section_content container col-lg-12 col-xs-12 text-center" >
    <div class="container " style="max-width: {{ content_container_width }}">
        <div class="row">
            <div class="col-lg-12 col-xs-12 text-center">
                {% if user.firstname is defined and  user.lastname is defined %}
                    <h3 class="section-subheading text-muted">{{ 'formulaire.contact'|trans() }} : {{ user.firstname ~ ' ' ~  user.lastname }}</h3>
                {% endif %}
                {% if user.email is defined %}
                    <h3 class="section-subheading text-muted">{{ 'formulaire.email'|trans() }} : <a href="mailto:{{ user.email }}">{{ user.email }}</a></h3>
                {% endif %}
            </div>
        </div>
        <div class="mt-5 mb-5 row">
            <div class="col-lg-12 col-xs-12 pl-0 text-center">
                <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">Témoignages</h3>
            </div>
        </div>
        {% for temoignage in livredor %}
        <div class="mt-5 row">
            <div class="col-lg-12 col-xs-12 pl-0 text-left">
                <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">{{ temoignage.name }}</h3>
            </div>
            <div class="col-lg-12 col-xs-12 pl-0 text-left">
                <blockquote style="color:#7c7c7c;font-family:'Roboto Condensed',serif;font-size:16px;text-align: justify;">
                   {{ temoignage.content|nl2br }}
                </blockquote>
            </div>
        </div>
        {% endfor %}

        <hr>

        <div class="mt-5 mb-5 row">
            <div class="col-lg-12 col-xs-12 pl-0 text-center">
                <h3 style="color:#8f2160;font-family:'Merriweather';font-style: italic;">Écrire dans le livre d'or</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-xs-12">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.name) }}
                            {#                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group-contact">
                            {{ form_widget(form.email) }}
                            {#                                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-contact">
                            {{ form_widget(form.content) }}
                            {#                                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>#}
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-xs-12 text-center">
                        <div id="success"></div>
                        *<button id="sendMessageButton" class="btn h-w-10 btn-outline-danger h-rounded-lg-4 btn-xl mt-5" type="submit">
                            {{ 'formulaire.send'|trans() }}
                        </button>
                    </div>
                </div>
                {{ form_widget(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
</section>




