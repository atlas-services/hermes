<!-- Portfolio Grid -->
{#<section id="{{ section.name ~ section.template.name }}" class="portfolio bg-light page-section" >#}
<section id="portfolio" class="section_content px-0" style="background-color:{{ content_bgcolor }}">
    <div class="container-fluid col-12 col-lg-{{ folio_container_width|col_lg() }}" >
        {% if(section.remote is null) %}
            <div class="row">
                <div class="col-lg-12 col-12 text-center">
                </div>
            </div>
            <div id="folio" class="row">
                {% for post in  section.posts|sort((a, b) => a.position <=> b.position) %}
                    <div class="col-md-{{ section.posts|list_length }} col-sm-{{ section.posts|list_length }} portfolio-item text-center">
                        {% if( 'modale1' ==  section.template2.code) %}
                        <!-- Modale1  -->
                            <a class="d-block mb-4 thumbnail portfolio-link" href="#" data-image-id="" data-toggle="modal"
                               data-image ="{{ asset(vich_uploader_asset(post, 'imageFile'))| imagine_filter('app_fixed_folio2_filter') }}"
                               data-target="#image-gallery">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                                {% if(vich_uploader_asset(post, 'imageFile') is not null) %}
                                    <img class="img-fluid " src="{{ asset(vich_uploader_asset(post, 'imageFile'))| imagine_filter('app_fixed_folio2_filter') }}"
                                         alt="{{ post.name }}">
                                {% endif %}
                            </a>
                        {% endif %}
                        {% if( 'modale2' ==  section.template2.code) %}
                        <!-- Modale2  -->
                            <!-- Modale2  -->
                            <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ post.id }}">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content">
                                        <i class="fa fa-plus fa-3x"></i>
                                    </div>
                                </div>
                                {% if(vich_uploader_asset(post, 'imageFile') is not null) %}
                                    <img class="img-fluid " src="{{ asset(vich_uploader_asset(post, 'imageFile'))| imagine_filter('app_fixed_folio2_filter') }}"
                                         alt="{{ post.name }}">
                                  {% endif %}
                            </a>
                        {% endif %}
                        <div class="portfolio-caption">
                            <h4>{{ post.name }}</h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if(section.remote is not null) %}
            <div id="folio" class="row">
            {% for img , image in  section.remote.images %}
                <div class="col-md-{{ section.remote.images|list_length }} col-sm-{{ section.remote.images|list_length }} portfolio-item text-center">
                    <a class="portfolio-link " data-toggle="modal" href="#portfolioModal{{ img }}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        {% if(image is not null) %}
                            <img class="img-fluid " src="{{ image }}"  alt="{{ img }}" />
                        {% endif %}
                    </a>
{#                    <div class="portfolio-caption">#}
{#                        <h4>{{ image }}</h4>#}
{#                    </div>#}
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>

