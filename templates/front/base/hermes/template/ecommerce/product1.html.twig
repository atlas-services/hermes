<div class="col-lg-{{ (section.templateWidth ?? folio_container_width)|col_lg() }} mx-auto mb-4 mt-2">
    {% if post.product is not null %}
        <article>
            <p class="text-center">
                <button class="col-10 col-lg-11 py-1 btn h-btn-outline-success post-product h-text-success mx-auto h-font-size-08" name="{{'add-product-' ~ post.product.id }}" id="{{ post.product.id }}" data-quantity="1"  data-type="add">
                    {{ 'cart.add'|trans()|raw }}
                    <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-cart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                </button>
            </p>
        </article>
    {% endif %}
</div>