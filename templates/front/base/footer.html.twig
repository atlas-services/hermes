<!-- Site footer -->
<section id="section_bottom" ></section>
<footer class="footer pt-3 col-lg-{{ footer_container_width|col_lg() }} col-12 mx-auto px-0"
        style="background-color: {{ footer_bgcolor ?? 'transparent' }}; color: {{ footer_color ?? '#ffffff' }}">
    <div class="container">
        <div class="row">
            {% if footer_about is defined %}
            <div class="col-sm-12 col-md-12">
                <p class="text-justify h5">{{ footer_about ?? '' }}</p>
            </div>
            {% endif %}

{#            <div class="col-12 col-md-3">#}
{#                <h6  style="color: {{ footer_color ?? '#ffffff' }}">Categories</h6>#}
{#                <ul class="footer-links">#}
{#                    <li  style="color: {{ footer_color ?? '#ffffff' }}"><a href="http://scanfcode.com/category/c-language/">C</a></li>#}
{#                </ul>#}
{#            </div>#}
        </div>
        <hr>
    </div>
    <div class="container">
        <div class="row">
        <button type="button" class="btn " data-bs-toggle="modal" data-bs-target="#sitemapModal">
            <p>Sitemap</p>
        </button>
            <div class="col-md-8 col-sm-6 col-12">
                <p  >{{ 'global.created_by'|trans()|raw }} <a onmouseover="this.style.color='{{ footer_link_hover_color ?? '#ffffff' }}'" onmouseout="this.style.color='{{ footer_link_color ?? '#ffffff' }}'" style="color: {{ footer_link_color ?? '#ffffff' }}" href="http://hermes-cms.org" target="_blanks">HERMES</a> |  <img src="/img/copyleft.png" class="my-auto" width="20px" >{{ 'global.copyleft'|trans()|raw }} <a onmouseover="this.style.color='{{ footer_link_hover_color ?? '#ffffff' }}'" onmouseout="this.style.color='{{ footer_link_color ?? '#ffffff' }}'" style="color: {{ footer_link_color ?? '#ffffff' }}" href="http://hermes-cms.org" target="_blanks">http://hermes-cms.org</a>
                </p>
            </div>
            <div class="col-md-4 col-sm-6 col-12">
                <ul class="social-icons">
                    {% if instagram is not null %}
                        <li><a  href="{{ instagram }}" target="_blanks"><i class="fa fa-instagram"></i></a></li>
                    {% endif %}
                    {% if facebook is not null %}
                        <li><a href="{{ facebook }}" target="_blanks"><i class="fa fa-facebook"></i></a></li>
                    {% endif %}
                    {% if twitter is not null %}
                        <li><a href="{{ twitter }}" target="_blanks"><i class="fa fa-twitter"></i></a></li>
                    {% endif %}
                    {% if linkedin is not null %}
                        <li><a  href="{{ linkedin }}" target="_blanks"><i class="fa fa-linkedin"></i></a></li>
                    {% endif %}
                    {% if instagram is not null %}
                        <li><a href="{{ youtube }}" target="_blanks"><i class="fa fa-youtube"></i></a></li>
                    {% endif %}
                    {% if dribbble is not null %}
                        <li><a  href="{{ dribbble }}" target="_blanks"><i class="fa fa-dribbble"></i></a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</footer>