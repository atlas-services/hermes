{% extends "front/base/base_email.html.twig" %}

{% block title %}Email contact{% endblock %}

{% block content %}
    <section >
        <div class="container col-lg-{{ container_width|col_lg() }} text-center center" style="background-color: #ffffff ;">
            <div class="row ml-5">
                <div class="col-lg-12 ml-5">
                    <h2 class="section-heading text-formatted-green text-danger ">Demande de contact</h2>
                    <h3 class="section-subheading text-muted">Nom : </h3><div class="text-success pl-4 ml-4"><p class="text-success pl-4 ml-4">{{ contact_form.name }}</p></div>
                    <h3 class="section-subheading text-muted">Téléphone :</h3> <div class="text-success pl-4 ml-4"><p class="text-success pl-4 ml-4">{{ contact_form.telephone ?? 'NC' }}</p></div>
                    <h3 class="section-subheading text-muted">Email :</h3> <div class="text-success pl-4 ml-4"><p class="text-success pl-4 ml-4"><a href="mailto:{{ contact_form.email }}">{{ contact_form.email }} </a></p></div>
                    {% if contact_form.message is defined %}
                    <h3 class="section-subheading text-muted">Message : </h3> <div class="text-success pl-4 ml-4"><p class="text-success pl-4 ml-4">{{ contact_form.message|nl2br }}</p></div>
                    {% endif %}
                    {% if contact_form.content is defined %}
                    <h3 class="section-subheading text-muted">Message : </h3> <div class="text-success pl-4 ml-4"><p class="text-success pl-4 ml-4">{{ contact_form.content|nl2br }}</p></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

