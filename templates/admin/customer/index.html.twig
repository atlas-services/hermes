{% extends '/admin/base.html.twig' %}

{% block nav %}
    <section id="section_top" class="container"></section>
    {% include '/admin/customer/nav.html.twig' %}
{% endblock nav %}

{% block content %}
    <section id="admin">
        <p class="text-secondary lead">
            {{ 'global.hello'|trans()|raw }}  {{ app.user.firstname ?? '' ~ ' ' ~  app.user.lastname ?? '' }},
        </p>
        <p class="text-secondary lead">
            {{ 'info.customer_presentation'|trans()|raw }}
        </p>
        {% if app.session.has('cart') %}
        <p class="h-bg-success lead col-lg-3 rounded py-4 text-center">
                {% include 'admin/customer/back_purchase.html.twig' %}
        </p>
        {% endif %}
    </section>
{% endblock content %}


