{% extends '/admin/base.html.twig' %}

{% block title %}{{ 'address.label'|trans() }}{% endblock %}

{% block nav %}
    <section id="section_top" class="container"></section>
    {% include '/admin/customer/nav.html.twig' %}
{% endblock nav %}

{% block content %}
    <a href="{{ path('admin_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>
    <h1 class="text-success">{{ 'address.label'|trans() }}</h1>

    {{ include('admin/address/_form_1.html.twig') }}

    <a href="{{ path('admin_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>
    </div>
{% endblock %}

{% block javascript %}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript"> 
   $(document).ready(function(){
        $('#address_fr_locality').change(function (e) {
            var $ville = $(this);
            $.vicopo($ville.val(), function (input, cities) {
            if(input == $ville.val() && cities[0]) {
                $ville.val(cities[0].city).vicopoTargets().vicopoClean();
            }
            });
            e.preventDefault();
            e.stopPropagation();
        });
        $('#address_fr_locality').keyup(function (e) {
        if(e.keyCode == 13) {
            var $ville = $(this);
            $.vicopo($ville.val(), function (input, cities) {
            if(input == $ville.val() && cities[0]) {
                $ville.val(cities[0].city).vicopoTargets().vicopoClean();
            }
            });
            e.preventDefault();
            e.stopPropagation();
        }
        });
    });
</script>
{% endblock %}