{% extends '/admin/base.html.twig' %}

{% block title %}Forgotten Password!{% endblock %}

{% block content %}
    <form method="post">
        <div class="col-lg-4 mx-auto my-5 mx-5 px-5 py-5 border border-secondary rounded-3 text-center ">
        <h1 class="h3 font-weight-normal h-text-success">{{ 'user.forgot_password'|trans() }}</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="col-lg-4 mx-auto form-control h-border-success" placeholder="{{ 'user.email'|trans() }}" required autofocus>

        <button class="mx-auto btn h-w-30 h-btn-outline-success h-rounded-lg-4 btn-xl mt-3" type="submit">
            {{ 'user.send_email'|trans() }}
        </button>
        </div>

    </form>
{% endblock %}
