<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm({{ 'global.confirm_delete'|trans() }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn">{{ 'global.delete'|trans()|raw }}</button>
</form>
