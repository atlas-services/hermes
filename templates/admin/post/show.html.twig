{% extends '/admin/base.html.twig' %}

{% block title %}Post{% endblock %}

{% block content %}
    <a href="{{ path('post_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>PublishedAt</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content|raw }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ post.active ? 'global.active'|trans()|raw : 'global.inactive'|trans()|raw }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ post.position }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>

    <a href="{{ path('post_edit', {'name': post.name, 'menu': post.section.menu.slug}) }}">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
