{% form_theme form 'admin/form/theme_posts.html.twig' %}
{{ form_start(form) }}
    {% if( app.request.attributes.get('_route') not in ['sheet_new']) %}
        {{ form_row(form.active) }}
        {{ form_row(form.position) }}
    {% endif %}
    {{ form_row(form.locale) }}
    {{ form_row(form.name) }}
    {% if(form.referenceName is defined) %}
        {% set label_reference = 'global.name_menu_reference'|trans() ~ ' : ' ~  locales|join('|')  %}
        {{ form_label(form.referenceName,label_reference ) }}
        {{ form_widget(form.referenceName) }} 
    {% endif %}
    {# {{ form_row(form.saveAndAddHermesListe) }} #}
    {{ form_row(form.saveAndAdd) }}
    {{ form_row(form.save) }}
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
