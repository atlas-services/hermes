{% extends '/admin/base.html.twig' %}

{% block title %}{{ 'sheet.show'|trans() }}{% endblock %}

{% block content %}
    <a class="btn h-btn-outline-success mb-sm-3"  href="{{ path('sheet_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>
    <h1 class="text-secondary">{{ 'sheet.show'|trans() }} {{ sheet.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'global.active'|trans() }}</th>
                <td>{{ sheet.active ? 'global.active'|trans()|raw : 'global.inactive'|trans()|raw }}</td>
            </tr>
            <tr>
                <th>{{ 'global.position'|trans() }}</th>
                <td>{{ sheet.position }}</td>
            </tr>
            <tr>
                <th>{{ 'global.name'|trans() }}</th>
                <td>{{ sheet.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn h-btn-outline-success mb-sm-3"  href="{{ path('sheet_index') }}">{{ 'global.back_to_list'|trans()|raw }}</a>

    <a class="hms-color1" href="{{ path('sheet_edit', {'id': sheet.id}) }}">edit</a>

    {{ include('admin/sheet/_delete_form.html.twig') }}
{% endblock %}
