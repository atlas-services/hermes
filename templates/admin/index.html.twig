                            <p class="mt-2">{{ 'info.first_step_p2'|trans()|raw }}</p>
                            <p>{{ 'info.first_step_next'|trans()|raw }} <span class="h-bg-success text-white rounded h-font-size-1 p-2">{{ 'info.new_libelle_sheet_2'|trans()|raw }}</span></p>
