                            <li>{{ 'info.second_step_li5'|trans()|raw }}</li>
                            <li>{{ 'info.second_step_li6'|trans()|raw }}</li>
                            <p class="mt-2">{{ 'info.second_step_p2'|trans()|raw }}</p>
                          </div>
                    </div>
                </div>
