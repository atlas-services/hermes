<div class="mt-lg-3">
    <h2 class="mt-3 text-dark text-center"> {{ 'info.admin_templates_1'|trans()|raw }}</h2>
{% for key, section in sections %}
    {% set suivant = key + 2 %}
    {% set precedent = key ?? 0 %}
    <div id="{{ section.code }}" class="mt-5 pt-5 pb-1" ></div>
    <h4 class="mt-5 mt-sm-4 mb-0 py-3 text-center h-bg-success text-white fst-italic">
        {% if key > 0 %}
            <a class="mt-3 text-center text-white" href="{{ '#hms-'~ precedent }}"><i class="fa fa-angle-double-up"></i></a>
        {% endif %}
        Template "{{ section.summary }}"
        {% if not(loop.last) %}
            <a class="mt-3 text-center text-white" href="{{ '#hms-'~ suivant }}"><i class="fa fa-angle-double-down"></i></a>
            <button id="copy{{ key }}" class="copy btn btn-icon ml-lg-5 italic text-white" data-copy="{{ key }}" data-copytype="html">{{ 'action.copy-light-1'|trans()|raw }}</button>
        {% endif %}
    </h4>
    <span id="tocopy{{ key }}">
    {% include 'admin/hermes/template-libre/'~ section.code ~ '/index.html.twig' %}
    </span>
{% endfor %}
</div>