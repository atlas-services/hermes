{% extends '/admin/base.html.twig' %}

{% block title %}{{ 'sheet.list'|trans() }}{% endblock %}

{% block content %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Active</th>
                <th>Code</th>
                <th>Name</th>
                <th>Summary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.active ? 'Yes' : 'No' }}</td>
                <td>{{ template.code }}</td>
                <td>{{ template.name }}</td>
                <td>{{ template.summary }}</td>
                <td>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">{{ 'action.edit'|trans()|raw }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'global.no_record'|trans() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn h-bg-success text-white" href="{{ path('template_new') }}">{{ 'global.new'|trans() }}</a>
{% endblock %}
